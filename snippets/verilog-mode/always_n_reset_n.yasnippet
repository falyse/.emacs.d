# -*- mode: snippet -*-
# contributor: Kaushal Modi
# name: always_ff negedge, active low sync reset
# key: alnn
# expand-env: ((yas-indent-line 'auto) (yas-also-auto-indent-first-line t) (yas-wrap-around-region t))
# --
always_ff @ (negedge ${1:clk} or negedge ${2:reset_n}) begin
  if (!$2) begin
    ${3:signal} <= ${4:'d0};
  end else begin
    $3 <= $0;
  end
end // always_ff @ (negedge $1 or negedge $2)
